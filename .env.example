# =====================================================
# LUMINA - Configuracao de Ambiente
# =====================================================

# === APLICACAO ===
APP_NAME=Lumina
APP_ENV=production
LOG_LEVEL=INFO
TIMEZONE=America/Sao_Paulo

# === BANCO DE DADOS ===
DATABASE_URL=sqlite:///./data/lumina.db

# === TELEGRAM BOT ===
# Obtenha o token criando um bot com @BotFather no Telegram
# Veja: CONFIGURAR_BOT_TELEGRAM.txt
TELEGRAM_BOT_TOKEN=
TELEGRAM_ADMIN_USER_IDS=

# Exemplo preenchido:
# TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
# TELEGRAM_ADMIN_USER_IDS=987654321,123456789

# === CALENDÁRIOS ===
# URLs dos feeds iCal das plataformas
AIRBNB_ICAL_URL=https://www.airbnb.com/calendar/ical/XXXXXXX.ics
BOOKING_ICAL_URL=https://admin.booking.com/hotel/hoteladmin/ical/XXXXXXX.ics
CALENDAR_SYNC_INTERVAL_MINUTES=30

# === DADOS DO IMÓVEL ===
# Preencha com os dados reais do seu imóvel
PROPERTY_NAME=Meu Apartamento
PROPERTY_ADDRESS=Condominio Exemplo
CONDO_NAME=Condominio Exemplo
CONDO_ADMIN_NAME=Administracao do Condominio
OWNER_NAME=Nome do Proprietario
OWNER_EMAIL=proprietario@email.com
OWNER_PHONE=(00) 0 0000-0000
OWNER_APTO=000
OWNER_BLOCO=A
OWNER_GARAGEM=000
CONDO_EMAIL=condominio@email.com

# === FEATURES ===
ENABLE_AUTO_DOCUMENT_GENERATION=false
ENABLE_CONFLICT_NOTIFICATIONS=true

# === SEGURANÇA ===
# IMPORTANTE: Gere uma chave forte com: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_TO_A_STRONG_SECRET_KEY
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis para Token Blacklist (OPCIONAL - usa in-memory se não configurado)
# Em produção, RECOMENDADO usar Redis para múltiplos servidores
# Deixe vazio para usar in-memory (apenas desenvolvimento/single-server)
REDIS_URL=
# REDIS_URL=redis://localhost:6379/0

# === CORS ===
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# === RATE LIMITING ===
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# =====================================================
# MVP2 e MVP3 - Recursos Futuros
# =====================================================

# === GMAIL API (MVP3) ===
GMAIL_CREDENTIALS_FILE=./credentials.json
GMAIL_TOKEN_FILE=./token.json
GMAIL_CHECK_INTERVAL_MINUTES=5
ENABLE_EMAIL_MONITORING=false

# === OLLAMA/GEMMA 3 (MVP3) ===
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gemma3:4b
OLLAMA_TIMEOUT_SECONDS=30
OLLAMA_TEMPERATURE=0.1

# === EMAIL UNIVERSAL (IMAP/SMTP) - MVP2 ===
# Provider: gmail, outlook, yahoo, custom
EMAIL_PROVIDER=gmail
EMAIL_FROM=seu-email@gmail.com
EMAIL_PASSWORD=sua-senha-ou-app-password
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_IMAP_HOST=
EMAIL_IMAP_PORT=993
EMAIL_USE_TLS=true
CONTACT_PHONE=(62) 99999-9999
CONTACT_EMAIL=contato@lumina.app

# IMPORTANTE: Para Gmail, use App Password, não a senha normal
# Gere em: https://myaccount.google.com/apppasswords
# Para Outlook: https://account.live.com/proofs/AppPassword

# === DOCUMENTOS (MVP2) ===
TEMPLATE_DIR=./templates
OUTPUT_DIR=./data/generated_docs
DEFAULT_TEMPLATE=autorizacao_condominio.docx
